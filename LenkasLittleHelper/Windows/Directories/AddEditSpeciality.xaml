<Window x:Class="LenkasLittleHelper.Windows.Directories.AddEditSpeciality"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LenkasLittleHelper.Windows.Directories"
        mc:Ignorable="d"
        Title="AddEditCity" Height="150" Width="100">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0" Margin="5">
            <StackPanel Orientation="Vertical" Grid.Row="0">
                <Label Content="Назва спеціальності"/>
                <TextBox x:Name="NameSpeciality"/>
            </StackPanel>
        </Grid>
        <Grid Grid.Row="1" Margin="5">
            <Button Content="Зберегти" Click="SaveSpeciality_Click"/>
        </Grid>
    </Grid>
</Window>